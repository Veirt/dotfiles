#
# System stuffs
#

super + Return
    kitty -e fish

XF86AudioRaiseVolume
    amixer set Master 5%+

XF86AudioLowerVolume
    amixer set Master 5%-

XF86AudioMute
    amixer set Master toggle

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86MonBrightnessUp
    sh -c "brightnessctl set +5%"

XF86MonBrightnessDown
    sh -c "brightnessctl set 5%-"

XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous


#
# Apps
#

super+w
    firefox

super+m
    kitty -e ncmpcpp

super+shift+d
    discord

super+e
    nemo

super+shift+s
    flameshot gui

super+shift+p
    sh -c "$HOME/.scripts/toggle-picom.sh"

super+r
    ulauncher-toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {e,c}
	bspc {quit,wm -r}

# close and kill

super + {_,shift + }q
	bspc node -{c,k}


#
# state/flags
#

# set the window state
super + {t,shift + t,shift+space,shift+f}
    bspc node -t {tiled,pseudo_tiled,\~floating,\~fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}


#
# focus/swap
#


# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

super + {_,shift + }{a,s,d,f}
    bspc {desktop -f,node -d} '^{5-8}'

super + ctrl + {h,l}
    bspc desktop -f {prev,next}.occupied.local

alt + {_, shift} + Tab
    bspc desktop -f {next,prev}.occupied.local



#
# move/resize

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

