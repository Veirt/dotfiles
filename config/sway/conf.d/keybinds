bindsym $mod+Return exec eval $LAUNCH_TERMINAL
bindsym $mod+w exec eval $BROWSER
bindsym $mod+d exec discord
bindsym $mod+e exec $GUIFM
bindsym $mod+r exec rofi -x11 -show drun
bindsym $mod+m exec geary

bindsym $mod+Shift+s exec grim -g "$(slurp)" - | wl-copy
bindsym Mod1+Shift+s exec flameshot gui
bindsym Print exec ~/.local/bin/notify-screenshot
bindsym $mod+c exec grim -g "$(slurp -p)" -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | tail -n 1 | cut -d ' ' -f 4 | wl-copy

bindsym XF86AudioRaiseVolume exec ~/.local/bin/volumectl up
bindsym XF86AudioLowerVolume exec ~/.local/bin/volumectl down
bindsym XF86AudioMute exec ~/.local/bin/volumectl mute
bindsym XF86AudioMicMute exec ~/.local/bin/volumectl mic-mute

bindsym XF86MonBrightnessUp exec ~/.local/bin/backlightctl up
bindsym XF86MonBrightnessDown exec ~/.local/bin/backlightctl down
bindsym $mod+Shift+o exec ~/.local/bin/backlight-toggle

bindsym XF86AudioPlay exec playerctl play-pause || mpc toggle
bindsym XF86AudioNext exec playerctl next || mpc next
bindsym XF86AudioPrev exec playerctl previous || mpc prev
