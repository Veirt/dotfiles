### Input configuration

# for some apps (?)
exec setxkbmap -option caps:escape

input type:keyboard {
    xkb_options caps:escape
}

input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
    events disabled_on_external_mouse
}

# fix brightness ghost
input 0:6:Video_Bus events disabled

output "LG Electronics LG HD PLUS 501NDHBFY769" {
    mode 1600x900@60Hz
    pos 100 0
}

output "RGT 0x1352 0x01010101" {
    mode 1600x900@60Hz
    pos 100 0
}
