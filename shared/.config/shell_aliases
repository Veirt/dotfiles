alias c="clear"
alias update="paru -Syu --noconfirm --removemake"

# quick open folders
alias repo="cd ~/dev"
alias dotfiles="cd ~/.dotfiles"

# replacements
alias l="exa"
alias la="exa -la --git --icons --group-directories-first"
alias ll="exa -ll --git --icons --group-directories-first"
alias yeet="rm -rf"
alias v="nvim"
alias vi="nvim"
alias vim="nvim"

# dev stuffs
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gd="git diff"
alias gf="git fetch"
alias gl="git log --oneline"
alias gds="git diff --staged"
alias push="git push"
alias pull="git pull"
alias py="python"
alias cr="cargo run"
alias cb="cargo build"
alias ct="cargo test"
alias yd="yarn dev"
alias ys="yarn start"
alias yb="yarn build"
alias t="tmux"
alias ta="tmux a"
alias lg="lazygit"
alias a="z"
alias stk="stklos -l ~/dev/sicp/simply.scm"
alias aout="./a.out"

alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"
alias update-grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias ua-drop-caches='sudo paccache -rk3; paru -Sc --aur --noconfirm'
alias ua-update-all='export TMPFILE="$(mktemp)"; \
    sudo true; \
    rate-mirrors --save=$TMPFILE arch --max-delay=21600 \
      && sudo mv /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist-backup \
      && sudo mv $TMPFILE /etc/pacman.d/mirrorlist \
      && ua-drop-caches \
      && paru -Syyu --noconfirm'

